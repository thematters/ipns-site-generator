{
  "name": "@matters/matters-html-formatter",
  "version": "0.0.4",
  "description": "Format HTML string before publish to IPFS or ISCN",
  "author": "https://github.com/thematters",
  "homepage": "https://github.com/thematters/matters-html-formatter",
  "repository": {
    "type": "git",
    "url": "git@github.com:thematters/matters-html-formatter.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --config jestconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [],
  "license": "APACHE-2.0",
  "devDependencies": {
    "@types/cheerio": "^0.22.23",
    "@types/isomorphic-fetch": "0.0.35",
    "@types/jest": "^26.0.19",
    "@types/lodash": "^4.14.165",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.3",
    "isomorphic-fetch": "^3.0.0",
    "lodash": "^4.17.20"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  }
}
